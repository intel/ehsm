	"item": [
		{
			"name": "CreateKey",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var appid = '202112100001';\r",
							"var timestamp=(new Date).getTime();\r",
							"var nonce = timestamp;\r",
							"var appkey = '202112345678'\r",
							"pm.environment.set(\"appid\", appid);\r",
							"pm.environment.set(\"timestamp\", timestamp);\r",
							"pm.environment.set(\"nonce\", nonce);\r",
							"\r",
							"let str = '';\r",
							"let sign_parmas = {appid, nonce, timestamp} \r",
							"for(var k in sign_parmas){\r",
							"if(!str) {\r",
							"    str += k + '=' + sign_parmas[k]\r",
							"} else{\r",
							"    str += '&' + k + '=' + sign_parmas[k]\r",
							"}\r",
							"}\r",
							"str += '&app_key=' + appkey;\r",
							"let sign = CryptoJS.HmacSHA256(str, appkey);\r",
							"console.log(sign)\r",
							"sign = CryptoJS.enc.Base64.stringify(sign)\r",
							"pm.environment.set(\"sign\", sign)"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data=JSON.parse(responseBody);\r",
							"var cmk_base64=data.result.cmk_base64;\r",
							"pm.environment.set(\"cmk_base64\", cmk_base64)"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
